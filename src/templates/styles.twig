{% macro field(name, label, value) %}
    <div>
        <label class="block">{{ label }}</label>
        <input class="text-blue-500 w-full" type="text" name="{{ name }}" x-on:change="handleChange" value="{{ value }}" placeholder="None">
    </div>
{% endmacro %}

<div class="fixed bottom-0 left-0 w-screen z-50 bg-white p-4 rounded-lg space-y-4" style="box-shadow: 0 0 20px rgba(0,0,0,0.2);" x-data="{...StylePanel(), blockId: {{ block.id }}}">
    {% include 'igloo/components/back' %}
    <p class="py-4 text-2xl flex justify-between">
        <strong class="">
            <span class="inline-block mr-1 -mb-1">{{ block.getIcon()|raw }}</span>
            Edit {{ block.getTypeLabel() }}
        </strong>
        <!--
        <a class="text-blue-500" href="#" x-on:click="back">
            <svg width="1em" height="1em" viewBox="0 0 16 16" class="bi bi-x-circle-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                <path fill-rule="evenodd" d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zM5.354 4.646a.5.5 0 1 0-.708.708L7.293 8l-2.647 2.646a.5.5 0 0 0 .708.708L8 8.707l2.646 2.647a.5.5 0 0 0 .708-.708L8.707 8l2.647-2.646a.5.5 0 0 0-.708-.708L8 7.293 5.354 4.646z"/>
            </svg>
        </a>
        -->
    </p>

    {% for sectionName, controls in block.getControls().groupBy('section') %}
        {% if sectionName %}
        <p><strong>{{ sectionName }}</strong></p>
        {% endif %}
        {% for control in controls %}
            {{ control.getInputHtml()|raw }}
        {% endfor %}
    {% endfor %}

    <hr>

    <button class="text-red-500" name="delete" value="1" x-on:click="handleDelete">Delete {{ block.getTypeLabel() }}</button>

