<div x-data="TextBlockController()" data-block-input data-block-id="{{ block.id }}">
    <input type="hidden" name="blockId" value="{{ block.id }}">
    <input type="text"
           name="block[content]"
           value="{{ block.content }}" 
           style="{{ block.attributes.style }}"
           x-on:change="handleChange"
    >
