<style>
    .igloo-space-y-4 > * + * { margin-top: 1rem; }
</style>
<link href="https://unpkg.com/tailwindcss@^1.0/dist/tailwind.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/gh/alpinejs/alpine@2.6.0/dist/alpine.min.js" defer></script>
<script>
    window.iglooCpUrl = '{{ cpUrl('igloo') }}'
    window.csrfTokenName = "{{ craft.app.config.general.csrfTokenName|e('js') }}"
    window.csrfTokenValue = "{{ craft.app.request.csrfToken|e('js') }}"
</script>
<div class="" data-igloo-element-id="{{ element.id }}">
    <input type="hidden" name="{{ field.handle }}" value="{{ tree.id }}">
    {{ tree.getInputHtml()|raw }}
    <hr style="margin-top: 100px;">
    {{ dump(tree.flatten().serialize()) }}
    {% embed 'igloo/panel' %}
        {% block body %}
            {% include 'igloo/components/layers' with {tree: tree} only %}
        {% endblock %}
    {% endembed %}
</div>
